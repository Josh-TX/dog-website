<!doctype html>
<html lang="{{ site.language }}">
  <head>
    {% block head %}
      {% include "components/head.njk" %}
    {% endblock head %}
  </head>
  <body class="d-flex flex-column justify-content-between min-vh-100">

    {% block header %}
      {% include "components/header.njk" %}
    {% endblock header %}

    {% block content %}
      <main class="bluebonnets flex-grow-1 pt-3">
        <div class="container">
          {{ content|safe }}
        </div>
      </main>
    {% endblock content %}

    {% block footer %}
      {% include "components/footer.njk" %}
    {% endblock footer %}

    {% block js %}
      <script async defer src="https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v3.2"></script>
      <script src="/_assets/parcel.js"></script>

      {% if env.isDev %}
        <script src="/_assets/parcel.js.map" rel="application/json"></script>
      {% endif %}
    {% endblock js %}
  </body>
</html>
